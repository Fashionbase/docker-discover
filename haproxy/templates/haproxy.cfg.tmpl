global
    daemon
    maxconn 4096
    pidfile /var/run/haproxy.pid

defaults
    mode tcp
    timeout connect 5s
    timeout client 1m
    timeout server 1m
    option redispatch
    balance roundrobin

listen stats :1936
    mode http
    stats enable
    stats hide-version
    stats uri /

{% for service in services %}
frontend {{ service }}
    mode http
    bind *:{{services[service].port}}
    use_backend {{ service }}-backend
{% endfor %}

{% for service in services %}
backend {{ service }}-backend
    mode http
    {% for backend in services[service].backends %}
    server {{ backend.name }} {{ backend.addr }} check inter 2s rise 3 fall 2
    {% endfor %}
{% endfor %}
